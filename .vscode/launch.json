    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/${workspaceFolderBasename}",
            "preLaunchTask": "Build Debug",
            "cwd": ".",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            }
        },
        {
            "name": "Launch Release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Release/${workspaceFolderBasename}",
            "cwd": ".",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "preLaunchTask": "Build Release"
        }
          
    ]
}